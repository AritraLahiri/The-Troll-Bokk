<%- include("partials/header") %>
<form action="/login" method="POST">
    <header>
        <div class="jumbotron">
            <h1 class="display-4 text-center">Login Fast !</h1>
            <hr class="my-4">
            <div class="form-group ">
                <input type="text" name="username" class="form-control form-control-lg my-4" placeholder="Name">
                <input type="password" name="password" class="form-control form-control-lg my-4" placeholder="Password">
                <button type="submit" class="btn btn-success btn-block mb-2">Login</button>
                <a href="/campgrounds" class="text-capitalize" id="back">go back</a>
            </div>
        </div>

    </header>
</form>

