<%- include("../partials/header") %>
<h1 class="my-5 text-center">Add Your Posts Here </h1>
<form action="/campgrounds" method="post" enctype="multipart/form-data">
    <div style="width:380px;margin:42px auto;">
        <div class="form-group ">
            <input type="text" name="name" placeholder="Post Name" class="form-control form-control-lg my-4"
                autocomplete="off">
            <input  name="image" placeholder="Image URL" class="form-control form-control-lg my-4"
                autocomplete="off" >
            <textarea name="descp" placeholder="Caption" class="form-control form-control-lg my-4"
                autocomplete="off"></textarea>
            <button type="submit" class="btn btn-primary btn-block mb-2">Add Camp</button>
            <a href="/campgrounds" class="text-capitalize">go back</a>
        </div>
    </div>
</form>
<%- include("../partials/footer") %>