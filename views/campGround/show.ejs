<%- include("../partials/header")  %>
<div class="container-fluid">
    <a href="/campgrounds">Back</a>

</div>
<div class="container">
    <div class="row mt-3">
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item active">Category 1 </li>
                <li class="list-group-item">Category 2 </li>
                <li class="list-group-item">Category 3 </li>
            </ul>
        </div>
        <div class="col-md-9 mt-2">
            <img src="<%= campGround.image %>" class="img-fluid img-thumbnail">
            <div class="my-3">
                <strong><span class="float-right"><span>Rs</span><%= campGround.price%>/night</span></strong>
                <h4 class="caption"><a href="#"><%= campGround.name %></a></h4>
                <p><%= campGround.desc %></p>
                <p><em>Created By -<%= campGround.author.username%></em></p>
                <% if(currentUser && campGround.author.id.equals(currentUser.id )) {%>
                <a class="btn btn-warning  text-capitalize btn-sm" href="/campgrounds/<%=campGround._id%>/edit">edit</a>
                <form action="/campgrounds/<%=campGround._id%>?_method=DELETE" method="POST" class="delete-form">
                    <button class="btn btn-danger btn-sm text-capitalize">delete</button>
                </form>
                <% } %>
                <p class="pb-5"><a href="/campgrounds/<%=campGround._id%>/comment/new"
                        class="btn btn-success float-right">Add a review</a></p>
                <div class="row">
                    <%  campGround.comments.forEach(element => { %>
                    <div class="col-md-12">
                        <strong><%=element.author.username.toUpperCase() %></strong>
                        <span class="float-right"> 3 days ago</span>
                        <p><%= element.text%></p>
                        <% if(currentUser && element.author.id.equals(currentUser.id)){%>
                        <a class="btn btn-sm btn-warning"
                            href="/campgrounds/<%=campGround._id%>/comment/<%=element._id%>/edit">
                            Edit
                        </a>
                        <form action="/campgrounds/<%=campGround._id%>/comment/<%=element._id%>?_method=DELETE"
                            method="POST" class="delete-form">
                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                        <% } %>
                    </div>
                    <% });%>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer")  %>