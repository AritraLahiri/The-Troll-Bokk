<%- include("../partials/header")   %>
<div class="container">
    <header>
        <div class="jumbotron">
            <h1 class="display-4 text-capitalize">welcome to Commenter!</h1>
            <p class="lead text-capitalize">view post all over the world and feel free to share your comments</p>
            <hr class="my-4">
            <p class="lead">
                <a class="btn btn-outline-danger btn-lg text-capitalize" href="/campgrounds/new" role="button">add
                    post</a>
            </p>
        </div>
    </header>
    <div class="row text-center">
        <% camp.forEach(ele=>{ %>
        <div class="col-lg-12 ">
            <div class="my-5">
                <div class="float-left ml-3">
                    <img src="<%=ele.author.image%>" class="avatar">
                    <span class="ml-2"><%= ele.author.username %></span>
                </div>

                <img src="<%= ele.image%>" class="img-fluid" id="img-index">
                <p class="lead text-left pl-3"><%= ele.desc%></p>
                <a href="/campgrounds/<%= ele._id %>"> <i class='fas fa-comment'></i></a>
            </div>
        </div>
        <% })  %>
        <div>
        </div>
        <%- include("../partials/footer")   %>